@using Business.ViewModels.Doctor
@model DoctorDetailsVM

<!-- main starts -->
<main>
    <!-- main-frame-2 section starts -->
    <section class="main-frame-2 no-select" style="background-image: url(assets/images/doctor-page-title.jpg);">
        <div class="container">
            <div class="row main-frame-2-title align-items-center">
                <div class="col-md-6 main-frame-2-title-text">@Model.Name</div>
                <div class="col-md-6 text-md-right main-frame-2-title-breadcrumb">Home / Doctors / @Model.Name</div>
            </div>
        </div>
        <div class="overlay"></div>
    </section>
    <!-- main-frame-2 section ends -->
    <!-- doctor single section starts -->
    <section class="doctor-single no-select">
        <div class="section-left-color"></div>
        <div class="section-right-color"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-4 section-left">
                    <div class="img-container">
                        <img src="~/assets/images/@Model.Photoname" alt="">
                    </div>
                    <div class="doc-info">
                        <h2 class="doctor-name">@Model.Name</h2>
                        <h2 class="sub-heading">@Model.Duty.Name</h2>
                    </div>
                    <div class="qualification">
                        <div class="qualification-title d-flex">
                            <i class="fas fa-briefcase-medical"></i>
                            <h4>Qualification</h4>
                        </div>
                        <div class="qualification-description">
                            <p>@Html.Raw(Model.Qualification)</p>
                        </div>
                    </div>
                    <div class="contact-info">
                        <div class="contact-info-title d-flex">
                            <i class="far fa-address-card"></i>
                            <h4>Contact Info</h4>
                        </div>
                        <div class="contact-info-description">
                            <div class="phone">
                                <i class="fas fa-phone-alt"></i>
                                <span>@Model.PhoneNumber</span>
                            </div>
                            <div class="mail">
                                <i class="far fa-envelope"></i>
                                <span>@Model.Email</span>
                            </div>
                        </div>
                    </div>
                    <div class="working-time">
                        <div class="working-time-title d-flex">
                            <i class="far fa-calendar-alt"></i>
                            <h4>Working Time</h4>
                        </div>
                        <ul class="working-time-description">
                            @Html.Raw(Model.WorkingTime)
                        </ul>
                    </div>
                </div>
                <div class="col-lg-8 section-right">
                    
                         @Html.Raw(Model.Description)
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- doctor single section ends -->
</main>
<!-- main ends -->