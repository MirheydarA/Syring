@using Business.ViewModels.Account
@model AccountLoginVM


@{
    var returnUrl = Context.Request.Query["ReturnUrl"];
}

<!-- main starts -->
<main>
    <!-- main-frame section starts -->
    <section class="main-frame-2 no-select" style="background-image: url('@Url.Content("~/assets/images/cart-frame.jpg")');">
        <div class="main-frame-2-title">
            <div class="container">
                <div class="row text-center">
                    <div class="col-md-12">
                        <div class="main-frame-2-title-text custom-title-text">
                            Login
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="main-frame-2-breadcrumb">
                            Home / Login
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- main-frame section ends -->
    <!-- product-table section starts -->
    <section class="login my-5 no-select">
        <div class="container">
            <form method="post" asp-action="login" asp-controller="account" class="login-form">

                <div asp-validation-summary="All"></div>

                <input type="hidden" asp-for="ReturnUrl" value="@returnUrl" />
                <div class="form-group">
                    <input class="form-control" type="text" asp-for="Email" placeholder="Username">
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" asp-for="Password" placeholder="Password">
                </div>
                <div class="form-group d-flex justify-content-center">
                    <button class="btn btn-primary">Login</button>
                </div>
                <div class="form-group d-flex justify-content-center">
                    <div>
                        <span>Don't have account yet?</span> <a asp-action="register" asp-controller="account">Register now</a>
                    </div>
                </div>
            </form>
        </div>
    </section>
    <!-- product-table section ends -->


</main>
<!-- main ends -->

