                    <span>View all members</span>
                    <i class="fas fa-arrow-right"></i>
                </div>
            </div>

                <div class="doctors-bottom row ">
            @foreach (var doctor in Model.Doctors)
            {
                    <div class="col-sm-12 col-md-6 col-lg-3  text-center" data-aos="fade-up" data-aos-duration="2000">
                        <div class="doctor-item">
                            <img  src="~/assets/images/@doctor.Photoname" alt="">
                            <div class="doctor-info">
                                <h4 class="doctor-name">@doctor.Name</h4>
                                <p class="doctor-speciality">@doctor.Duty.Name</p>
                                <div class="social-media">
                                    <a href="#">
                                        <i class="fab fa-facebook-f"></i>
                                    </a>
                                    <a href="#">
                                        <i class="fab fa-twitter"></i>
                                    </a>
                                    <a href="#">
                                        <i class="fab fa-linkedin-in"></i>
                                    </a>
                                </div>
                            </div>

                        </div>
                    </div>
