@using Business.ViewModels.Home
@model HomeIndexVM

<!-- main starts -->
<main>
    <!-- banner section starts -->
    <section class="banner no-select">
        @for (int i = 0; i < Model.Sliders.Count; i++)
        {
            var slider = Model.Sliders[i];

            <div class="banner-page banner-page-@i" style="background-image: url(assets/images/@slider.Photoname);">
                <div class="caption caption-1" data-aos="fade-up" data-aos-duration="2000">
                    @slider.Title
                </div>
                <div class="auxilary-caption" data-aos="fade-up" data-aos-duration="2000">
                    @slider.Subtitle
                </div>
                <div class="button" data-aos="fade-up" data-aos-duration="2000">
                    Learn more
                </div>
            </div>
        }
        <div class="bullets">
            <div class="bullets">
                @for (int i = 0; i < Model.Sliders.Count; i++)
                {
                    <div class="bullet bullet-@i @(i == 0 ? "selected" : "")"></div>
                }
            </div>
        </div>

        <div class="overlay">
        </div>
    </section>
    <!-- banner section ends -->
    <!-- vision section starts -->
    <section class="vision no-select">
        <div class="container">
            @foreach (var ourVision in Model.OurVisions)
            {
                <div class="vision-top row  justify-content-center" data-aos="fade-up" data-aos-duration="2000">
                    <div class="col-lg-10 text-center">
                        <h2 class="sub-heading">Our vision</h2>
                        <h2 class="heading">@ourVision.Title</h2>
                        <span class="description">
                            @ourVision.Description
                        </span>
                    </div>
                </div>
            }
            <div class="vision-bottom row">
                @foreach (var visons in Model.OurVisionComponents)
                {
                    <div class="col-sm-12 col-md-6 col-lg-3">
                        <div class="item" data-aos="fade-up" data-aos-duration="2000">
                            <img src="~/assets/images/@visons.Photoname" alt="" class="item-icon">
                            <div class="item-content">
                                <h5 class="title">@visons.Title</h5>
                                <p class="item-text">
                                    @visons.Description
                                </p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
    <!-- vision section ends -->
    <!-- about section starts -->
    <section class="about about-home no-select">
        <div class="container">
            <div class="row">
                @foreach (var aboutUs in Model.AboutUs)
                {
                    <div class="col-sm-12 col-md-6">
                        <div class="about-content" data-aos="fade-up" data-aos-duration="2000">
                            <span class="sub-heading">About Us</span>
                            <h2 class="heading">
                                @aboutUs.Title
                            </h2>
                            <p class="about-content">
                                @aboutUs.Description
                            </p>
                            <div class="signature">
                                <img src="assets/images/signature.png" alt="">
                            </div>
                        </div>

                    </div>
                    <div class="col-sm-12 col-md-6">
                        <div class="about-images text-sm-center text-md-left" data-aos="fade-up"
                             data-aos-duration="2000">
                            <img src="~/assets/images/@aboutUs.MainPhotoname" class="about-image about-image-1 mt-5 mt-md-0"></img>
                            <img src="~/assets/images/@aboutUs.Photoname" class="about-image about-image-2  mt-5 mt-md-0"></img>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
    <!-- about section ends -->
    <!-- department section starts -->
    <section class="department no-select">
        <div class="container">
            @foreach (var department in Model.Departments)
            {
                <div class="department-top row justify-content-center" data-aos="fade-up" data-aos-duration="2000">
                    <div class="col-lg-10 text-center">
                        <h2 class="sub-heading">What we do best</h2>
                        <h2 class="heading">@department.Title</h2>
                        <span class="description">
                            @department.Description
                        </span>
                    </div>
                </div>
            }
            @foreach (var departmentComponent in Model.DepartmentComponents)
            {
                <div class="department-center">
                    <div class="row ">
                        <div class="col-sm-12 col-lg-4">
                            <div class="item" data-aos="fade-up" data-aos-duration="2000">
                                <img src="~/assets/images/@departmentComponent.Photoname" alt="" class="item-icon">
                                <div class="item-content">
                                    <h5 class="title">@departmentComponent.Title</h5>
                                    <p class="item-text">
                                        @departmentComponent.Description
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="department-bottom text-center">
            <div class="button" data-aos="fade-up" data-aos-duration="2000">View All Departments</div>
        </div>
        </div>
    </section>
    <!-- department section ends -->
    <!-- video section starts -->
    @foreach (var video in Model.Videos)
    {
        <section class="video" style="background-image: url(assets/images/@video.CoverPhoto)" data-aos="fade-up"
                 data-aos-duration="2000">
            <div class="video-overlay d-flex justify-content-center align-items-center">
                <div class="play-button d-flex justify-content-center align-items-center">
                    <i class="fas fa-caret-right triangle"></i>
                    <div class="scaling-background"></div>
                </div>
            </div>
        </section>
    }
    <!-- video section ends -->
    <!-- doctors section starts -->
    <section class="doctors no-select">
        <div class="container">
            <div class="doctors-top row d-flex justify-content-between" data-aos="fade-up" data-aos-duration="2000">
                <h2 class="sub-heading">Our Professional Doctor</h2>
