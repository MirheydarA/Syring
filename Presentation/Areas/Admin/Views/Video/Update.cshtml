@using Business.ViewModels.Admin.Video
@model VideoUpdateVM

<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Update slider</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <form enctype="multipart/form-data" asp-action="update" asp-controller="video" method="post">
                <div class="form-group">
                    <label asp-for="Link"></label>
                    <input class="form-control" asp-for="Link"></input>
                    <span asp-validation-for="Link"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CoverPhoto"></label>
                    <input class="form-control" asp-for="CoverPhoto"></input>
                    <span asp-validation-for="CoverPhoto"></span>
                </div>
                <button class="btn btn-primary" type="submit">Update</button>
            </form>
        </div>
    </div>

</div>
<!-- /.container-fluid -->
@section scripts{
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
}
